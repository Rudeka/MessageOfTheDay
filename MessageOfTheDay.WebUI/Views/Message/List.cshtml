@model MessageOfTheDay.WebUI.Models.ContextModel
@{
    ViewBag.Title = "Message of the Day";
}
<div>

    @using (Ajax.BeginForm("Save", "Message", new AjaxOptions() {}))
    {
        @Html.Label("This is a message of " + @Model.Days.Single(m => m.Id == Model.Message.DayId).Name) <br/>
        @Html.TextAreaFor(m => m.Message.TodaysMessage)
        @Html.HiddenFor(m => m.Message.Id)
        <input type = "submit" value="Save"><br>
        }
    </div>

<img src="@Url.Content("~/Content/Images/" + Model.FlagPath)" />

    @Html.Partial("ShowDropdowns", new MessageOfTheDay.WebUI.Models.ShowDropdownsModel(Model.Days, Model.Languages))